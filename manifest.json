{
  "manifestVersion": 1,
  "name": "LFC Band Tile",
  "description": "Liverpool Football Club news feed powered by Bleacher Report RSS",
  "version": 1,
  "versionString": "1.1 Beta",
  "author": "Ashish Pathak",
  "organization": "",
  "contactEmail": "ashish@ash-down.net",
  "tileIcon": {
    "46": "icons/tileIcon.png"
  },
  "badgeIcon": {
    "24": "icons/badgeIcon.png"
  },
  "icons": {},
  "refreshIntervalMinutes": 60,
  "resources": [
    {
      "url": "http://bleacherreport.com/articles/feed?tag_id=215",
      "style": "Feed",
      "content": {
        "_1_category1": "category[1]",
        "_1_category2": "category[2]",
        "_1_category3": "category[3]",
        "_1_category4": "category[4]",
        "_1_category5": "category[5]",
        "_1_category6": "category[6]",
        "_1_title": "title",
        "_1_pubdate": "pubDate"
      }
    }
  ],
  "pages": [
    {
      "layout": "MSBand_ScrollingText",
      "condition": "true",
      "textBindings": [
        {
          "elementId": "1",
          "value": "{{_1_category5}} {{_1_category6}}"
        },
        {
          "elementId": "2",
          "value": "{{_1_title}} {{_1_pubdate}}"
        }
      ]
    }
  ],
  "notifications": [
    {
      "condition": "{{_1_category1}} contains \"Breaking News\"",
      "title": "LFC Breaking News",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_category2}} contains \"Breaking News\"",
      "title": "LFC Breaking News",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_category3}} contains \"Breaking News\"",
      "title": "LFC Breaking News",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_category4}} contains \"Breaking News\"",
      "title": "LFC Breaking News",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_category5}} contains \"Breaking News\"",
      "title": "LFC Breaking News",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_category6}} contains \"Breaking News\"",
      "title": "LFC Breaking News",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_title}} contains \"Transfer\"",
      "title": "LFC Transfer",
      "body": "{{_1_title}}"
    },
    {
      "condition": "{{_1_title}} contains \"vs.\"",
      "title": "LFC Match",
      "body": "{{_1_title}}"
    }
  ]
}
